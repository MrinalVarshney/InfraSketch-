{% if storage_needed %}
---
apiVersion: v1
kind: PersistentVolume
metadata:
  name: {{ pv_name | default("mongodb-pv") }}
  labels:
    app: {{ app_label | default("mongodb") }}
    type: {{ pv_type | default("local") }}
spec:
  storageClassName: {{ storage_class | default("manual") }}
  capacity:
    storage: {{ storage_size | default("10Gi") }}
  accessModes:
    - {{ access_mode | default("ReadWriteOnce") }}
  {% if pv_type == "local" %}
  local:
    path: {{ local_path | default("/data/db") }}
  nodeAffinity:
    required:
      nodeSelectorTerms:
      - matchExpressions:
        - key: kubernetes.io/hostname
          operator: In
          values:
          - {{ node_name | default("worker-node-1") }}
  {% elif pv_type == "cloud" %}
  persistentVolumeReclaimPolicy: {{ reclaim_policy | default("Retain") }}
  {% if cloud_provider == "aws" %}
  awsElasticBlockStore:
    volumeID: {{ ebs_volume_id | default("vol-12345678") }}
    fsType: {{ fs_type | default("ext4") }}
  {% elif cloud_provider == "gcp" %}
  gcePersistentDisk:
    pdName: {{ disk_name | default("mongodb-disk") }}
    fsType: {{ fs_type | default("ext4") }}
  {% endif %}
  {% endif %}
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: {{ pvc_name | default("mongodb-pvc") }}
  namespace: {{ namespace | default("default") }}
spec:
  storageClassName: {{ storage_class | default("manual") }}
  accessModes:
    - {{ access_mode | default("ReadWriteOnce") }}
  resources:
    requests:
      storage: {{ storage_size | default("10Gi") }}
  selector:
    matchLabels:
      app: {{ app_label | default("mongodb") }}
{% endif %}